# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

[_headers]
indent_size = 2

[Makefile]
indent_style = tab
